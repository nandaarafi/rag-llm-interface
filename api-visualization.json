        },
        {
          "name": "Get Workflow History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/workflows?status=completed&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "workflows"],
              "query": [
                {
                  "key": "status",
                  "value": "completed"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
