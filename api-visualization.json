    {
      "name": "üí¨ Chat & AI APIs",
      "item": [
        {
          "name": "Send Chat Message (STREAMING)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat"]
            },
            "body": {
              "mode": "json",
              "json": {
                "id": "chat-uuid-here",
                "messages": [
                  {
                    "id": "msg-uuid",
                    "role": "user",
                    "parts": [
                      {
                        "type": "text",
                        "text": "Create a PPT about climate change"
                      }
                    ]
                  }
                ],
                "selectedChatModel": "chat-model",
                "currentArtifact": {
                  "documentId": "doc-uuid",
                  "kind": "ppt",
                  "title": "Climate Change Presentation"
                }
              }
            }
          },
          "description": "Main chat endpoint with AI streaming response. Uses tools: createDocument, updateDocument, requestSuggestions, getWeather"
        },
        {
          "name": "Get Chat History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/history",
              "host": ["{{baseUrl}}"],
              "path": ["api", "history"]
